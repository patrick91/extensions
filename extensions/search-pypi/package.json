{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "search-pypi",
  "title": "Search PyPI Packages",
  "description": "Search for PyPI package information",
  "subtitle": "pypi",
  "icon": "icon.png",
  "author": "patrick91",
  "contributors": [],
  "license": "MIT",
  "categories": [
    "Developer Tools"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Search Packages",
      "subtitle": "pypi",
      "description": "Search for PyPI package information.",
      "mode": "view"
    },
    {
      "name": "favorites",
      "title": "View Favorites",
      "subtitle": "pypi",
      "description": "View your favorite packages",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "defaultCopyAction",
      "type": "dropdown",
      "data": [
        {
          "title": "pip",
          "value": "pip"
        },
        {
          "title": "pdm",
          "value": "pdm"
        },
        {
          "title": "poetry",
          "value": "poetry"
        }
      ],
      "title": "Default Package Manager",
      "description": "The package manager to use by default",
      "required": false,
      "default": "pip",
      "value": "pip"
    },
    {
      "name": "secondaryCopyAction",
      "type": "dropdown",
      "data": [
        {
          "title": "pip",
          "value": "pip"
        },
        {
          "title": "pdm",
          "value": "pdm"
        },
        {
          "title": "poetry",
          "value": "poetry"
        }
      ],
      "title": "Secondary Package Manager",
      "description": "The secondary package manager to use",
      "required": false,
      "default": "pdm",
      "value": "pdm"
    },
    {
      "name": "defaultOpenAction",
      "type": "dropdown",
      "data": [
        {
          "title": "PyPI Package Page",
          "value": "pypiPackagePage"
        }
      ],
      "title": "Default Open Action",
      "description": "How to open the selected package when Enter is pressed",
      "required": false,
      "default": "openRepository",
      "value": "openRepository"
    },
    {
      "name": "historyCount",
      "type": "textfield",
      "title": "History Count",
      "description": "How many items to store in your history",
      "required": false,
      "default": "30",
      "value": "30"
    },
    {
      "name": "showLinkToSearchResultsInListView",
      "type": "checkbox",
      "label": "Show link in list view",
      "title": "Show link to pypi.org results in list view",
      "description": "Show link to pypi.org search results in list view",
      "required": false,
      "value": true,
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.66.2",
    "@raycast/utils": "^1.12.0",
    "dedupe": "^4.0.2",
    "htmlparser2": "^9.1.0",
    "parse-github-url": "^1.0.2",
    "tiny-relative-date": "^1.3.0",
    "use-debounce": "^10.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "^20.11.16",
    "@types/parse-github-url": "^1.0.3",
    "@types/react": "^18.2.52",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "lint:fix": "ray lint --fix",
    "publish": "npx @raycast/api@latest publish"
  }
}
